{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-native",
      "react-redux"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "store/**/*",
    "global.d.ts",
  ]
}
